<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<data>
    <record id="wizard_message_form" model="ir.ui.view">
        <field name="name">message.wizard</field>
        <field name="model">message.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Message">
                <separator string="Message" colspan="6"/>
                <field name="text" colspan="4" nolabel="1"/>
                <newline/>
                <separator colspan="6"/>
                <footer>
                    <button special="cancel" class="oe_highlight" string="Done" />
                </footer>
            </form>
        </field>
    </record>
</data>
</odoo>
