<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="module_gst_invoice_category">
            <field name="name">GST Invoices</field>
            <field name="description">GST Invoices</field>
            <field name="sequence">20</field>
        </record>

        <record id="gst_user_access" model="res.groups">
            <field name="name">User</field>
            <field name="comment">Access limited only to read invoices</field>
            <field name="category_id" ref="module_gst_invoice_category"/>
        </record>

        <record id="gst_admin_access" model="res.groups">
            <field name="name">Manager</field>
            <field name="comment">Complete access to GST invoices</field>
            <field name="category_id" ref="module_gst_invoice_category"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="implied_ids" eval="[(4, ref('gst_user_access'))]"/>
        </record>
    </data>

    <data noupdate="1">
        <record model="ir.rule" id="gstr_tool_records_rule">
            <field name="name">GST Rules</field>
            <field name="model_id" ref="model_gst_return_tool"/>
            <field name="domain_force">[('company_id', '=' ,user.company_id.id)]</field>
            <field name="groups" eval="[(4,ref('gst_admin_access'))]"/>
        </record>
    </data>
</odoo>
